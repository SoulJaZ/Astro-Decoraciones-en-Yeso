---
import HeaderLink from '../../src/components/HeaderLink.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
</head>
<body>
    <Header />
    <main>
        <section class="max-w-lg mx-auto p-8 bg-white rounded-2xl shadow-lg border border-gray-200">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Contáctanos</h2>
            <p class="text-gray-600 text-center mb-8">Déjanos tu mensaje y te responderemos lo antes posible.</p>
    
            <form action="https://formspree.io/f/mjkgovod" method="POST" class="space-y-6">
                <!-- Nombre -->
                <div class="relative">
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nombre</label>
                    <input type="text" id="name" name="name" required
                        class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition placeholder-gray-400"
                        placeholder="Escribe tu nombre">
                </div>
    
                <!-- Correo -->
                <div class="relative">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Correo electrónico</label>
                    <input type="email" id="email" name="email" required
                        class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition placeholder-gray-400"
                        placeholder="tucorreo@ejemplo.com">
                </div>
    
                <!-- Mensaje -->
                <div class="relative">
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Mensaje</label>
                    <textarea id="message" name="message" rows="4" required
                        class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition placeholder-gray-400"
                        placeholder="Escribe tu mensaje aquí"></textarea>
                </div>
    
                <!-- Botón -->
                <button type="submit"
                    class="w-full bg-indigo-600 text-white py-3 px-6 rounded-lg shadow-md font-semibold text-lg hover:bg-indigo-700 transition-all duration-300 focus:ring-2 focus:ring-indigo-400 focus:outline-none">
                    Enviar mensaje
                </button>
            </form>
        </section>
    </main>
    <Footer />
</body>
</html>

